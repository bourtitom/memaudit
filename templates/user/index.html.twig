{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center my-4">Liste des utilisateurs</h1>

        <div class="d-flex justify-content-center">
{% set hasUserRole = false %}

{% for user in users %}
    {% if 'ROLE_USER' in user.roles and 'ROLE_ADMIN' not in user.roles %}
        {% set hasUserRole = true %}
    {% endif %}
{% endfor %}

{% if users|length > 0 and hasUserRole %}
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Date de naissance</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                {% if 'ROLE_USER' in user.roles and 'ROLE_ADMIN' not in user.roles %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.firstname }}</td>
                        <td>{{ user.lastname }}</td>
                        <td>{{ user.mail }}</td>
                        <td>
                            {% if user.birthdate %}
                                {{ user.birthdate|date('d/m/Y') }}
                            {% else %}
                                N/A
                            {% endif %}
                        </td>
                    </tr>
                {% endif %}
            {% endfor %}
        </tbody>
    </table>
{% else %}
    <p>Aucun utilisateur trouvé.</p>
{% endif %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
