{% extends 'base.html.twig' %}

{% block title %}Liste des scores{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center my-4">{{ 'scoreList'|trans }}</h1>

        <div class="d-flex justify-content-center">
        {% if scores|length > 0 %}
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Id</th>
                        <th>{{ 'user'|trans }}</th>
                        <th>{{ 'level'|trans }}</th>
                        <th>{{ 'theme'|trans }}</th>
                        <th>{{ 'moove'|trans }}</th>
                        <th>{{ 'createdAt'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for score in scores %}
                        <tr>
                            <td>{{ score.id }}</td>
                            <td>{{ score.idUser }}</td> {# Add the user value here #}
                            <td>{{ score.level }}</td>
                            <td>{{ score.theme }}</td>
                            <td>{{ score.moove }}</td>
                            <td>{{ score.createdAt|date('Y-m-d H:i:s') }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>{{ 'No scores found'|trans }}</p>
        {% endif %}
        </div>
    </div>
{% endblock %}
