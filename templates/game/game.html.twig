{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<style>
.btn-stop:hover{
    background: var(--bs-border-radius-lg) !important;
    color:var(--bs-btn-hover-bg);
}
</style>

<main class="form-signin w-10 m-auto col-md-6">

    <h1 class="h3 mb-3 fw-normal m-5">{{ 'choose game'|trans }}</h1>
<div class="row row-cols-1 row-cols-md-3 mb-3 text-center d-flex justify-content-around">
 <div class="col">
        <div class="card mb-4 rounded-3 shadow-sm border-primary">
          <div class="card-header py-3 text-bg-primary border-primary">
            <h4 class="my-0 fw-normal">{{ 'visual memory'|trans }}</h4>
          </div>
          <div class="card-body">
            <h1 class="card-title pricing-card-title">{{ 'level'|trans }} <small class="text-body-secondary fw-light">1</small></h1>
            <button type="button" class="w-100 btn btn-lg btn-primary">{{ 'play'|trans }}</button>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card mb-4 rounded-3 shadow-sm">
          <div class="card-header py-3">
            <h4 class="my-0 fw-normal">{{ 'auditive memory'|trans }}</h4>
          </div>
          <div class="card-body">
            <h1 class="card-title pricing-card-title">{{ 'level'|trans }} <small class="text-body-secondary fw-light">X</small></h1>
     
            <button type="button" class="w-100 btn btn-lg btn-outline-primary btn-stop">{{ 'in coming'|trans }}</button>
          </div>
        </div>
      </div>

    </div>

    

</main>
{% endblock %}
